{
  "manifest_version": 2,
  "name": "openbubble",
  "version": "0.1",
  "description": "surf the internet in the background to burst users data bubble.",
  "homepage_url": "https://github.com/mehrpouya/openbubble",
  "icons": {
    "48": "icons/openbubble.png"
  },

  "permissions": [
    "webRequest",
    "<all_urls>",
    "alarms",
    "tabs",
    "storage"
  ],

  "page_action": {
    "default_icon": "icons/openbubble.png",
    "default_title": "openbubble"
  },
  "applications": {
    "gecko": {
      "strict_min_version": "55.0a2"
    }
  },
  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "scripts": ["openbubble.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentParser.js"]
    }
  ]
}